<!DOCTYPE html>
<html>
  {{>_head}}
  <body>
    <div class="container main center-block">
      <div class="inner cover">
      <h1 class="cover-heading">Search for Beer</h1>
        <div class="row">
          <div class="col-sm-10">
            <form class="form-horizontal input-group" action="/beers/searchByBrewery" method="POST">
              <input type="text" class="form-control" name="brewery" value="" placeholder="Search by brewery...">
              <span class="input-group-btn">
                <button type="submit" class="button btn btn-group-sm">Go!</button>
              </span>
            </form>
          </div>

          <div class="col-sm-10">
            <form class="form-horizontal input-group" action="/beers/searchByType" method="POST">
              <select class="form-control" id="type" name="type" required>
                <option value="" disabled selected>Search by type...</option>
                <option value="lager">Lager</option>
                <option value="ipa">IPA</option>
                <option value="stout">Stout</option>
                <option value="porter">Porter</option>
                <option value="wheat">Wheat</option>
                <option value="ale">Ale</option>
              </select>
              <span class="input-group-btn">
                <button type="submit" class="button btn btn-group-sm">Go!</button>
              </span>
            </form>
          </div>

          <div class="col-sm-10">
            <form class="form-horizontal input-group" action="/beers/searchByRating" method="POST">
              <select class="form-control" id="rating" name="rating" required>
                <option value="">Search by rating</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
              <span class="input-group-btn">
                <button type="submit" class="button btn btn-group-sm">Go!</button>
              </span>
            </form>
          </div>


        <!-- {{#searchOptions}}
         <div class="container">
        <a href={{id}}>{{name}}</a>
        <p>{{type}} - {{brewery}}</p>

        </div>
       {{/searchOptions}} -->
     </div> <!--end of row div -->
     <div class="form-group">
       <a id="home-btn" href="/beers/home" class="button btn btn-default btn-large">Home</a>
     </div>
   </div> <!--end of inner cover div -->
 </div> <!--end of main container div -->
    {{>_footer}}
  </body>
</html>
